        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="./style.css">
        <script src="https://kit.fontawesome.com/59e87e232f.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <main>
            <div class="screen" id="page-popup">
                <div class="page-popup">
                    <span class="close" id="closePageUI">&times;</span>
                    <ul class="page-list">
                        <li class="highlighted">Maths</li>
                        <li class="page-select">Main</li>
                        <li class="page-select">English</li>
                        <li class="page-select">Languages</li>
                        <li class="page-select">Societies</li>
                        <li class="page-select">Sciences</li>
                        <li class="page-select">Arts</li>
                        <li class="page-select">Misc</li>
                    </ul>
                </div>
            </div>  

            <div class="screen" id="write-popup">
                <div class="form-popup">
                    <form method="post" action="/main">
                        <h2 style="margin: 15px 25px 5px 25px;">Post a message <span class="close" id="closePostUI">&times;</span></h2>
                        <div class="row" style="margin: 15px; margin-top: 5px;">
                            <label class="prompt">Choose subject:</label>
                            <select class="dropdown" id="subject" name="subject">
                                <option value="General">General</option>
    
                                <optgroup label="English"></optgroup>
                                <option value="English Lang & Lit">English Lang & Lit</option>
                                <option value="English Lit">English Lit</option>
    
                                <optgroup label="Languages"></optgroup>
                                <option value="Spanish">Spanish</option>
                                <option value="Mandarin">Mandarin</option>
                                <option value="Vietnamese">Vietnamese</option>
                                <option value="French">French</option>
    
                                <optgroup label="Individuals and Societies"></optgroup>
                                <option value="Economics">Economics</option>
                                <option value="Business">Business</option>
                                <option value="History">History</option>
                                <option value="Geography">Geography</option>
                                <option value="Psychology">Psychology</option>
    
                                <optgroup label="Sciences"></optgroup>
                                <option value="Physics">Physics</option>
                                <option value="Biology">Biology</option>
                                <option value="Chemistry">Chemistry</option>
                                <option value="Computer Science">Computer Science</option>
                                <option value="Sports Science">Sports Science</option>
                                <option value="Environmental Science">Environmental Science</option>
                                
                                <optgroup label="Math"></optgroup>
                                <option value="Math AA">Math AA</option>
                                <option value="Math AI">Math AI</option>
        
                                <optgroup label="The Arts"></optgroup>
                                <option value="Music">Music</option>
                                <option value="Visual Arts">Visual Arts</option>
                                <option value="Film">Film</option>
                                <option value="Drama">Drama</option>
    
                                <optgroup label="Misc."></optgroup>
                                <option value="TOK">TOK</option>
                                <option value="CAS">CAS</option>
                                <option value="EE">EE</option>
                            </select>
                        </div>
                        <textarea class="text-input" id="text" type="text" name="text" required></textarea>
                        <button class="quirky-button" type="submit" action="submit" id="submit">Post Message</button>
                    </form>
                </div>
            </div>

            <h1 class="hint-text" id="noPost">there are no posts yet... :(</h1>
            <div class="content" id="content" style="padding: 0;">
                <h1 class="page-title" style="z-index: 10;"><i class="fa-solid fa-bookmark header-icon"></i>Math Board</h1>
